<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="50dp"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/p1"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_margin="10dp"
        android:text="Hit : 0"
        android:textSize="22sp"/>

    <TextView
        android:id="@+id/p2"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_margin="10dp"
        android:text="Attempts : 30"
        android:textSize="22sp"
        android:layout_below="@+id/p1" />


    <TextView
        android:id="@+id/miss"
        android:layout_margin="10dp"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_below="@+id/p2"
        android:textSize="22sp" />

    <Button
        android:id="@+id/btn00"
        android:background="@drawable/hole"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="44"
        android:layout_margin="5dp"
        android:layout_toStartOf="@+id/btn01"
        android:textSize="30sp"
        android:textColor="#00000000"
        android:layout_above="@+id/btn10"/>

    <Button
        android:id="@+id/btn01"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_margin="5dp"
        android:textColor="#00000000"
        android:background="@drawable/hole"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/btn11"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="@+id/btn00"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn02"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/hole"
        android:textColor="#00000000"
        android:layout_margin="5dp"
        android:layout_toEndOf="@+id/btn01"
        android:textSize="30sp"
        android:layout_above="@+id/btn12"/>

    <Button
        android:id="@+id/btn10"
        android:layout_width="100dp"
        android:textColor="#00000000"
        android:layout_height="100dp"
        android:layout_margin="5dp"
        android:layout_above="@+id/btn20"
        android:background="@drawable/hole"
        android:textSize="30sp"
        android:layout_toStartOf="@+id/btn11"/>

    <Button
        android:id="@+id/btn11"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/hole"
        android:layout_centerHorizontal="true"
        android:textSize="30sp"
        android:layout_margin="5dp"
        android:textColor="#00000000"
        android:layout_above="@+id/btn21" />

    <Button
        android:id="@+id/btn12"
        android:layout_width="100dp"
        android:textColor="#00000000"
        android:layout_height="100dp"
        android:layout_margin="5dp"
        android:background="@drawable/hole"
        android:layout_above="@+id/btn22"
        android:textSize="30sp"
        android:layout_toEndOf="@id/btn11"/>


    <Button
        android:id="@+id/btn20"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_toStartOf="@+id/btn21"
        android:textColor="#00000000"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp"
        android:background="@drawable/hole"
        android:textSize="30sp"
        android:layout_margin="5dp"
        />
    <Button
        android:id="@+id/btn21"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:textColor="#00000000"
        android:layout_margin="5dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/hole"
        android:textSize="30sp" />

    <Button
        android:id="@+id/btn22"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginBottom="30dp"
        android:textColor="#00000000"
        android:textSize="30sp"
        android:layout_margin="5dp"
        android:background="@drawable/hole"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/btn21"/>

    <Button
        android:id="@+id/start"
        android:text="Start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        tools:ignore="RelativeOverlap" />

</RelativeLayout>
